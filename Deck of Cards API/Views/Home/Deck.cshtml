@{
}

<form asp-method="post" asp-action="Deck">
    <input type="hidden" name="deckId" value="@Model.DeckId"
    <input type="submit" value="Shuffle" />
</form>

<h1>Your hand:</h1>
@{
    foreach (Card c in Model.Cards)
    {
        <h2>@c.Value of @c.Suit</h2>
        <img src="@c.Image" />
    }
}
